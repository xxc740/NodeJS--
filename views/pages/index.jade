extends ../layout

block content
  .content
    .row
      each item in movies
        .col-md-2
          .thumbnail
            a(href="/movie/#{item._id}")
              img(src="#{item.poster}",alt="{item.title}")
              .caption
                h3#{title}
                p:a.btn-primary(href="/movie/#{item._id}",role="button")
